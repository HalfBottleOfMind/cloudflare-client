{
    "name": "halfbottleofmind/cloudflare-client",
    "description": "Cloudflare Client",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Vladislav Panfilov",
            "email": "andromalak222@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "HalfBottleOfMind\\CloudflareClient\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "hooks": {
            "pre-commit": [
                "composer phpstan",
                "composer phpcs",
                "composer phpunit"
            ]
        }
    },
    "require": {
        "php": "^7.4.0",
        "guzzlehttp/guzzle": "^7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4",
        "brainmaestro/composer-git-hooks": "^2.8",
        "squizlabs/php_codesniffer": "^3.5",
        "phpstan/phpstan": "^0.12.52"
    },
    "scripts": {
        "post-install-cmd": "./vendor/bin/cghooks update",
        "phpcs": "./vendor/bin/phpcs --standard=PSR2 src/ tests/",
        "phpcbf": "./vendor/bin/phpcbf --standard=PSR2 src/ tests/",
        "phpstan": "./vendor/bin/phpstan analyse src/ tests/ --level=8",
        "phpunit": "./vendor/bin/phpunit"
    }
}
